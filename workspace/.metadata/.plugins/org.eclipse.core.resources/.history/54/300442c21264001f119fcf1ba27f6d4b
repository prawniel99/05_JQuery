<!DOCTYPE html>
<html lang="kr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    
    <link rel="stylesheet" href="../css/public.css">
    <script src="../js/jquery-3.7.1.js"></script>

	<style>
	
	</style>

	<script>
		$(function(){
			$('#btn1').on('click', function(){
                fetch('memberController.jsp')
                .then(function(res){
                    console.log(res);
                    if(res.ok){
                    	return res.json();
                    }else{
                    	new Error("Error: "+res.statusText);
                    }
                })
                .then(function(data){
                	console.log(data)
                	code = "<table border='1'>";
                	code += "<tr><td>ID</td>";
                	code += "<td>NAME</td><td>EMAIL</td>";
                	code += "<td>TEL</td></tr>";
                	for(user of data){
                		code += "<tr><td>"+user.mem_id+"<td>";
                		code += "<td>"+user.mem_name+"</td><td>"+user.mem_mail
                	}
                	code += "</table>";
                })
                .catch(function(err){
                	alert(err);
                })
            })
		})
	</script>

</head>

<body>

    <div class="box">
        <h1>
			1. 
        </h1>

        <input type="button" value="memberList" id="btn1">
        <div id="result1"></div>

    </div>

