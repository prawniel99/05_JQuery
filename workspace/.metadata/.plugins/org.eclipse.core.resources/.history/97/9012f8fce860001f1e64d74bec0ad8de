<!DOCTYPE html>
<html lang="kr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>

    <link rel="stylesheet" href="../css/public.css">
    <script src="../js/jquery-3.7.1.js"></script>

    <style>
        #res {
        	display: flex;
        	flex-direction: row;
        }
        
        .item {
            flex: 25%;
            margin: 3px;
            padding: 2px;
        }
    </style>

    <script>
        // 준비되면 시작 이라는 것 $(()=>{})

        const getData = (url) =>{
            return new Promise((resolve, reject)=>{
                const xhr = new XMLHttpRequest();
                xhr.open('get', url, true);
                xhr.send();
                xhr.onload = () => resolve(xhr.responseText); // promise의 then() 함수의 call back 에서 text를 받는다. 뭔소린지 이해를 못하는군!
                // return을 해야하지만, 문장이 한개일때는 중활고 세미콜론 리턴 없이 그냥 간단하게 쓴다.
                // 지금 on('click', function() 뒤에 {} 이게 있잖아, 이거 없으면 그냥 )
                xhr.onerror = () => reject(new Error("오류 발생"));
            })
        }
        
        
        
        
        
        $(()=>{
            $('#jobj').on('click', function(){
                // getData('jobj.jsp');
                promi = getData('jobj.jsp')
                promi.then((res)=>{
                    return JSON.parse(res); // 이것도 {} 이거 없이 한줄로 가능
                })
                .then((data)=>{
                    // data로 출력
                    code = "<table border='3'>";
                    code += "<tr><td>이름</td>";
                    code += "<td>"+data.name+"</td></tr>";
                    
                    code += "<tr><td>주소</td>";
                    code += "<td>"+data.addr+"</td></tr>";
                    
                    code += "<tr><td>번호</td>";
                    code += "<td>"+data.tel+"</td></tr>";
                    code += "</table>"

                    $('#result3').html(code);
                })
            })

            $('#jmix').on('click', ()=>{
                /* getData('jmix.jsp')
                .then((res)=>{
                	return JSON.parse(res);
                })
                .then((data)=>{
                	
                }) */
                getData('jmix.jsp')
                .then((res)=>JSON.parse(res))
                .then((data)=>{
                	let code = "";
                	// for(let user of data){
                	for(let{name, addr, tel} of data){
                		code += `name: ${name}<br>
                			     addr: ${addr}<br>
                			     tel: ${tel}<br>
                			     <hr color="blue">`;
                	}
                	$('#result4').html(code);
                }) // then 끝
				.catch(err=>console.log);            
            })
        })
    </script>

</head>

