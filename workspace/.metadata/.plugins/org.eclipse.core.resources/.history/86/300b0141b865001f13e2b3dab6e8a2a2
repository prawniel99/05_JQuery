	<style>
	
	</style>

	<script>
        $(()=>{
            $('#member').on('click', ()=>{
                $.ajax({
                    url : '/jqpro/MemberController',
                    type : 'get', // 위 url에서, get 방식으로 요청하라. 거기서 service로 가고 dao로 가고, db에서 가져와서 역방향으로 돌아오겠지, controller에서 view 가서, json 데이터로 만들고, callback function으로 돌아온다.
                    success : function(result){
						// alert("success");
						
	                	code = "<table border='1' class='table'>";
	                	code += "<tr><td>ID</td>";
	                	code += "<td>NAME</td><td>EMAIL</td>";
	                	code += "<td>TEL</td></tr>";
	                	for(user of result){
	                		code += "<tr><td>"+user.mem_id+"</td>";
	                		code += "<td>"+user.mem_name+"</td><td>"+user.mem_mail+"</td>";
	                		code += "<td>"+user.mem_hp+"</td></tr>";
	                	}
	                	code += "</table>";
	                	$('#result1').html(code);
						
                    },
                    // data : "id=" + vid // 이거 쓰는거 아니야
                    error : function(xhr){
						alert("error: "+xhr.status);
                    },
                    dataType : 'json'
                    // contentType : "application/x-www-form-urlencoded" // 이거 안써도 되는거. 그럼 왜 씀? data 주염ㄴ 쓴다고? 안쓴다고?
                })
            })
        })
	</script>

