    <script>

        const xhr = new XMLHttpRequest();
        console.log(xhr);
        
        $(()=>{

            $('#text').on('click', function(){

                // 요청
                xhr.open('get', 'text.jsp', true);
                xhr.send();

                // 응답
                xhr.onload = function(){
                    if(xhr.readState == 4 && xhr.status == 200){
                        res = xhr.responseText; // json형식의 text문자열
                        // res = 홍길동/개나리/진달래/무궁화/수선화/라일락
                        
                        arr = res.split("/");
                        
                        // 출력
                    }
                }
            })
            
        })
    </script>

