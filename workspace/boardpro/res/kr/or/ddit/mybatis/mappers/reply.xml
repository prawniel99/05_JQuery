<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
	PUBLIC "-//mybatis.org/DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="reply">

	<!-- 댓글 쓰기 -->
	<insert id="insertReply" parameterType="replyVO">
		insert into replytab
		values(replytab_renum_seq.nextval, #{bonum}, #{name}, #{cont}, sysdate)
	</insert>
	
	<!-- 댓글 리스트 --> <!-- 파라미터 1개일때는 아무단어나 써도 문제 없음 --> <!-- 세미콜론 찍으면 안됨 -->
	<select id="selectByReply" parameterType="int" resultType="replyVO">
		select * from replytab where bonum = #{renum}
	</select>


	<!-- 댓글 삭제 -->
	<delete id="deleteReply" parameterType="int">
		delete from replytab where renum = #{data}
	</delete>


	<!-- 댓글 수정 -->
	<update id="updateReply" parameterType="replyVO">
		update replytab set cont = #{cont} where renum = #{renum}
	</update>
	
</mapper>